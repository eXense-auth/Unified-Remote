<?xml version="1.0" encoding="utf-8"?>
<layout onLaunch="launch" onVolumeUp="volume_up" onVolumeDown="volume_down" onResume="resume" onPause="pause" lightcolor="#ff8000" darkcolor="#222222">
  <grid>
    <row weight="wrap">
      <label id="info" text="[Not Playing]" textAlign="center" />
    </row>
    <row>
      <button icon="vmute" onTap="volume_mute" />
      <button icon="up" onTap="volume_up" />
      <button icon="web" onTap="at" />
    </row>
    <row>
      <button icon="left" onTap="slower" />
      <button icon="select" onTap="normal_rate" />
      <button icon="right" onTap="faster" />
    </row>
    <row>
      <button icon="docleft" onTap="previous" />
      <button icon="down" onTap="volume_down" />
      <button icon="docright" onTap="next" />
    </row>
    <row>
      <button icon="stop" onTap="stop" />
      <button icon="window" onTap="fullscreen" />
      <button icon="play" onTap="play_pause" />
    </row>
	<row>
	  <button icon="left" ontap="prevdvdch" />
	  <button text="-3s" ontap="jump_back_3s" />
	  <button text="-10s" ontap="jump_back" />	  
	  <button text="-1m" ontap="jump_back_1m" />
	  <button text="+1m" ontap="jump_forward_1m" />
	  <button text="+10s" ontap="jump_forward" />
	  <button text="+3s" ontap="jump_forward_3s" />
	  <button icon="right" ontap="nextdvdch" />
	</row>
  </grid>
</layout>