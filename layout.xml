<?xml version="1.0" encoding="utf-8"?>
<layout onLaunch="launch" onVolumeUp="volume_up" onVolumeDown="volume_down" darkcolor="#222222" lightcolor="#00b386">

	<row>
		<button icon="vmute" onTap="mute" />
		<button icon="up" onTap="volume_up" />
		<button icon="list" onTap="list" />
	</row>
	<row>
		<button icon="left" onTap="rewind" />
		<button icon="select" onTap="enter" />
		<button icon="right" onTap="fast_forward" />
	</row>
	<row>
		<button icon="back" onTap="back" />
		<button icon="down" onTap="volume_down" />
		<button icon="fullscreen" onTap="fullscreen" />
	</row>
	<row weight="wrap">
		<button icon="rwd" onTap="slower" />
		<button text="‹" onTap="rewind_half" />
		<button text="«" onTap="rewind_double" />
		<button text="»" onTap="fast_forward_double" />
		<button text="›" onTap="fast_forward_half" />
		<button icon="ff" onTap="faster" />
	</row>
	<row>
		<button icon="previous" onTap="previous" />
		<button icon="playpause" onTap="play_pause" />
		<button icon="next" onTap="next" />
	</row>
</layout>
